{
  "manifest_version": 3,
  "name": "virtual-pet",
  "version": "1.1",
  "description": "A cute cat that roams your browser window.",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/main.tsx"],
      "css": ["src/index.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pet-sprite.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
